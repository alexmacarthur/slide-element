{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNEXT",
    "module": "ESNext",
    "declaration": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*"
  ]
}
